/* pages/shop/shop.wxss */

.header .mname {
  padding: 5px 15px;
}
.header .remark {
  font-size: 12px;
  color: #aaa;
  display: block;
  padding-top: 5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 150px;
}

.role {
  margin-top: 5px;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
  padding: 10px 15px;
  position: relative;
  line-height: 34px;
  color: rgba(247, 212, 12, 0.966);
  height: 55px;
  box-sizing: border-box;
}
.no-shop {
  color: #ccc;
  text-align: center;
}
.no-shop > .desc {
  padding-top: 30px;
  padding-bottom: 15px;
}

.shop-form {
  background-color: #fff;
  text-align: center;
  padding: 10px 15px;
  display: block;
}
.form-group {
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}
.form-group input {
  display: block;
  height: 34px;
  padding: 6px 12px;
  font-size: 14px;
  line-height: 1.42857143;
  color: #555;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
}